<div class="flex min-h-full flex-col justify-center py-6 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
 <%= link_to root_path, class: "group block mx-auto w-auto" do %>
      <div class="flex-shrink-0 flex text-sky-50 group-hover:opacity-90" >
        <%= inline_svg_tag("site_mark", desc: "#{ t :app_description}", alt: "#{ t :app_name}", class: "block h-8 fill-current text-umich-maize ") %>
        <span class="sr-only"><%="#{ t :app_name}" %></span>
      </div>
    <% end %>
    <h1 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Sign up for an account</h1>
  </div>
  <div class="mt-6 sm:mx-auto sm:w-full sm:max-w-lg">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10 ">
      <%= form_for resource, as: resource_name, url: registration_path(resource_name), class: "space-y-8 group error" do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field pb-4 ">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@host.domain", type: :email, autocomplete: "email" %>
        </div>

        <div class="field pb-6">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", type: :password, autocomplete: "new-password" %>

        </div>
        <div class="field pb-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-field-ds", placeholder: "password", type: :password, autocomplete: "new-password" %>
     
        </div>
        <div>
          
          <%= f.submit "Sign up", class: "flex w-full justify-center rounded-md border border-transparent bg-umich-blue mt-2 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2"  %>
        </div>
      </form>
      <div class="mt-6">
        <%- if devise_mapping.omniauthable? && resource_class.omniauth_providers.size >= 0 %>
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-300"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="bg-white px-2 text-gray-500">Or continue with</span>
            </div>
          </div>
          <div class="mt-6 grid grid-flow-col auto-cols-fr gap-3 justify-center ">
            <%= render "devise/shared/omniauth_providers", resource: resource  %>
 
          </div>
          <%- if devise_mapping.registerable? && controller_name != 'sessions' %>
            <div class="mt-10 text-right">
              <%= link_to "Sign in", new_session_path(resource_name), class: "text-right mt-2 pr-6 w-screen max-w-sm " %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
</div>
