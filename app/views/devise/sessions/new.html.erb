<div class="flex min-h-full flex-col justify-center py-6 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <%= link_to root_path, class: "group block mx-auto w-auto" do %>
      <div class="flex-shrink-0 flex text-sky-50 group-hover:opacity-90" >
        <%= inline_svg_tag("we_are_wads_mark", aria: :true, desc: "#{ t :app_description}", alt: "#{ t :app_name}", label: "#{ t :app_name}", class: "block h-8 fill-current text-umich-maize ") %>
      </div>
    <% end %>
    <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Sign in to your account</h2>
  </div>
  <div class="mt-6 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10 ">
      <%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field pb-6 ">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-sky-500 focus:outline-none focus:ring-sky-500 sm:text-sm", type: :email %>
        </div>
        <div class="field pb-4">
          <%= f.password_field :password, autocomplete: "current-password", class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-sky-500 focus:outline-none focus:ring-sky-500 sm:text-sm", type: :password %>
        </div>
        <div class="field flex items-center justify-between py-4 text-sm">
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-sky-600 focus:ring-sky-500" %>
              <%= f.label :remember_me, class: "ml-2  block text-sm text-gray-900 whitespace-nowrap " %>
            </div>
          <% end %>
          <div>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-medium text-sky-700 hover:text-sky-500" %><br />
            <% end %>
          </div>
        </div>
        <div>
          <%= f.submit "Sign in", class: "flex w-full justify-center rounded-md border border-transparent bg-umich-blue mt-2 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2"  %>
        </div>
      </form>
      <div class="mt-6">
        <%- if devise_mapping.omniauthable? && resource_class.omniauth_providers.size >= 0 %>
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-300"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="bg-white px-2 text-gray-500">Or continue with</span>
            </div>
          </div>
          <div class="mt-6 grid grid-flow-col auto-cols-fr gap-3 justify-center ">
            <%= render "devise/shared/omniauth_providers", resource: resource %>


          </div>
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <div class="mt-10 text-right">
              <%= link_to "Sign up", new_registration_path(resource_name), class: "text-right mt-2 pr-6 w-screen max-w-sm " %>
            </div>
          <% end %>
        <% end %>

      </div>
    </div>
  <% end %>
</div>
</div>
