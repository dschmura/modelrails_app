<div class="  flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0 " data-controller="dropdown"> 
  <!-- Profile dropdown-->
  <% if current_user %>
    <div class="sm:ml-3 relative z-10 mx-auto">
      
        <button class="ml-2 sm:bg-gray-800 flex text-sm sm:w-auto  rounded-full ring-1 ring-offset-1 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white header-link-mobile pt-3 sm:p-0" id="user-menu-button"  aria-haspopup="true" data-action="click->dropdown#toggle click@window->dropdown#hide" data-dropdown-target="button" role="button" >
          <span class="sr-only">Open user menu</span>
          <%= image_tag avatar_url_for(current_user), class: " h-8 w-8 rounded-full", alt: "#{current_user}" %>
          <span class="sm:hidden block hover:text-slate-400 px-4 py-2 text-sm text-sky-50"><%= "Hello #{current_user.email}" %></span>
        </button>

      <!--
        Dropdown menu, show/hide based on menu state.
        Entering: "transition ease-out duration-100"
        From: "transform opacity-0 scale-95"
        To: "transform opacity-100 scale-100"
        Leaving: "transition ease-in duration-75"
        From: "transform opacity-100 scale-100"
        To: "transform opacity-0 scale-95"
      -->
      <div class="origin-top-right absolute sm:right-0 mt-2 w-full sm:w-56 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none"
      aria-labelledby="user-menu-button"
      aria-orientation="vertical"
      data-dropdown-target="menu"
      role="menu"
      tabindex="-1">
        <!-- Active: "bg-gray-100", Not Active: "  -->
        <span class="hidden sm:block hover:text-slate-400 px-4 py-2 text-sm text-gray-700">
          <%= "Hello #{current_user.email}" %>
        </span>
        <%= link_to "Your Profile", edit_user_registration_path, class: "block hover:text-slate-400 px-4 py-2 text-sm text-gray-700", role: "menuitem",  tabindex: "-1", id: "user-menu-item-0" %>
        <%= link_to "Settings", edit_user_registration_path, class: "block hover:text-slate-400 px-4 py-2 text-sm text-gray-700", role: "menuitem",  tabindex: "-1", id: "user-menu-item-1" %>
        <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "block hover:text-slate-400 px-4 py-2 text-sm text-gray-700 mt-2 -mb-1 hover:text-red-700 hover:bg-red-100 w-full text-start" %>
      </div>
    </div>
  <% else %>
    <%= link_to "Sign in", new_user_session_path, class: "whitespace-nowrap inline hover:text-slate-400 px-4 py-2 text-sm text-cyan-50" %>
  <% end %>
</div>
